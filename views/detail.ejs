<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <% if (!contact) { %>
            <div class="alert alert-danger fw-bold" role="alert">
                Contact Not Found! <br>
                <a href="/contact" class="alert-link fw-normal">&laquo;Back to Contact List</a>
            </div>
            <% }else{ %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= contact.nama %> </h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= contact.noTelp %> </h6>
                    <p class="card-text"><%= contact.email %> </p>
                    <!-- <a href="/contact/delete/<%= contact.nama %> " class="btn btn-danger"
                        onclick="return confirm('Anda Yakin ?')">Delete</a> -->
                    <form action="/contact?_method=DELETE" method="post" class="d-inline">
                        <input type="hidden" name="nama" value="<%= contact.nama %>">
                        <button class="btn btn-danger badge" type="submit"
                            onclick="return confirm('Anda Yakin ?')">Delete</button>
                    </form>
                    <a href="/contact/update/<%= contact.nama %> " class="btn btn-info badge">Update</a>
                    <a href="/contact" class="card-link d-block">&laquo;Back to Contact List</a>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>